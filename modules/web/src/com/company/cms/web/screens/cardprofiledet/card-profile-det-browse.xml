<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://cardProfileDetBrowse.caption"
        focusComponent="cardProfileDetsTable"
        messagesPack="com.company.cms.web.screens.cardprofiledet">
    <data readOnly="true">
        <collection id="cardProfileDetsDc"
                    class="com.company.cms.entity.CardProfileDet">
            <view extends="_local"/>
            <loader id="cardProfileDetsDl">
                <query>
                    <![CDATA[select e from cms_CardProfileDet e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="cardProfileDetsTable"
            spacing="true">
        <filter id="filter"
                applyTo="cardProfileDetsTable"
                dataLoader="cardProfileDetsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="cardProfileDetsTable"
                    width="100%"
                    dataContainer="cardProfileDetsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="bin" width="200px"/>
                <column id="renewPeriod" width="400px"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="cardProfileDetsTable.create"/>
                <button id="editBtn" action="cardProfileDetsTable.edit"/>
                <button id="removeBtn" action="cardProfileDetsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
