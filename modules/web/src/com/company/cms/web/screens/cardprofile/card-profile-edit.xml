<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://cardProfileEdit.caption"
        focusComponent="form"
        messagesPack="com.company.cms.web.screens.cardprofile">
    <data>
        <instance id="cardProfileDc"
                  class="com.company.cms.entity.CardProfile">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="cardProfileDc">
            <column width="350px">
                <textField id="instNoField" property="instNo"/>
                <textField id="binDescrField" property="binDescr"/>
                <textField id="binField" property="bin"/>
                <textField id="binLenField" property="binLen"/>
                <textField id="cardLenField" property="cardLen"/>
                <textField id="panLenField" property="panLen"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
