<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://cardEmvKeyBrowse.caption"
        focusComponent="cardEmvKeysTable"
        messagesPack="com.company.cms.web.screens.cardemvkey">
    <data readOnly="true">
        <collection id="cardEmvKeysDc"
                    class="com.company.cms.entity.CardEmvKey">
            <view extends="_local"/>
            <loader id="cardEmvKeysDl">
                <query>
                    <![CDATA[select e from cms_CardEmvKey e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="cardEmvKeysTable"
            spacing="true">
        <filter id="filter"
                applyTo="cardEmvKeysTable"
                dataLoader="cardEmvKeysDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="cardEmvKeysTable"
                    width="100%"
                    dataContainer="cardEmvKeysDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="bin"/>
                <column id="binAppid"/>
                <column id="binKeynm"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="cardEmvKeysTable.create"/>
                <button id="editBtn" action="cardEmvKeysTable.edit"/>
                <button id="removeBtn" action="cardEmvKeysTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
